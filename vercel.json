{
  "version": 2,
  "builds": [
    { "src": "client/**", "use": "@vercel/static" },
    { "src": "client/public/**", "use": "@vercel/static" },
    { "src": "client/src/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "cleanUrls": true
    }
  ]
}
